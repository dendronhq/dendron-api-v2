{
  "name": "fern-express-starter",
  "scripts": {
    "stage:integ": "npx dotenv -e .env.integ",
    "watch": "tsc --watch",
    "build": "tsc",
    "build:api": "fern generate",
    "start": "node lib/server.js",
    "dev": "nodemon src/server.ts",
    "proto": "ts-node-esm --log-error src/proto.ts",
    "format": "prettier --write src/**",
    "format:check": "prettier --check src/**",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test:setup": "yarn stage:integ -- yarn prisma migrate reset",
    "test": "yarn stage:integ -- jest"
  },
  "dependencies": {
    "@markdoc/markdoc": "^0.2.2",
    "@prisma/client": "4.15.0",
    "@types/morgan": "^1.9.4",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "minimatch": "^9.0.0",
    "morgan": "^1.10.0",
    "nanoid": "3.1.23",
    "neverthrow": "^6.0.0",
    "sequelize": "^6.32.0",
    "supertest": "^6.3.3",
    "winston": "^3.8.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.1",
    "@types/lodash": "^4.14.194",
    "@types/minimatch": "^5.1.2",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^18.11.18",
    "@types/react": "^18.2.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "dotenv": "^16.1.4",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.33.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "prisma": "^4.15.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "4.6.4"
  }
}
