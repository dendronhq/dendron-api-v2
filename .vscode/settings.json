{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "db",
      "database": "${workspaceFolder:dendron-api-v2}/prisma/dev.db"
    },
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "integ",
      "database": "${workspaceFolder:dendron-api-v2}/prisma/dev-integ.db"
    }
  ]
}